<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.johan.perez.DatosAbiertosUNAC.ResumenLengua">

    <android.support.v7.widget.CardView
        android:layout_width="316dp"
        android:layout_height="478dp"
        android:layout_x="31dp"
        android:layout_y="20dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="13dp">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="23dp"
                android:text="Nombre de Lengua:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="56dp"
                android:text="Departamento:" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="86dp"
                android:text="Familia Linguistica:" />

            <TextView
                android:id="@+id/tv_dpto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="56dp"
                android:text="Departamento."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="215dp"
                android:text="Descripción:" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="118dp"
                android:text="Número de Habitantes: " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="150dp"
                android:text="Número de Hablantes: " />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="18dp"
                android:layout_y="185dp"
                android:text="Vitalidad:" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="283dp"
                android:layout_height="212dp"
                android:layout_x="18dp"
                android:layout_y="246dp"
                android:scrollbars="vertical"
                android:text="Descripcion."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_vitalidad"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="185dp"
                android:text="Vitalidad:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hablantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="118dp"
                android:text="Hablantes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_habitantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="150dp"
                android:text="Habitantes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_flia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="86dp"
                android:text="Flia Linguistica."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="23dp"
                android:text="Lengua."
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />


        </AbsoluteLayout>

    </android.support.v7.widget.CardView>

</AbsoluteLayout>
